<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".SplashActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="@dimen/splash_animation_width"
        android:layout_height="@dimen/splash_animation_height"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_fileName="animation_message.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_text"
        android:gravity="center"
        android:fontFamily="@font/objective_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xxlarge"
        android:layout_above="@+id/lottie"
        />

</RelativeLayout>