<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:background="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/main_post_details_img_width"
                android:layout_height="@dimen/main_post_details_img_height"
                android:src="@drawable/ic_close1"
                android:padding="8dp"
                android:layout_gravity="right"
                app:tint="@color/purple_200"
                />

            <TextView
                android:id="@+id/txTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hi Boy!...."
                android:textSize="@dimen/text_large"
                android:fontFamily="@font/objective_bold" />

            <TextView
                android:id="@+id/txBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hi Boy!...."
                android:textSize="@dimen/text_medium"
                android:fontFamily="@font/objective_light" />
            <TextView
                android:id="@+id/txUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="By : User 1"
                android:textSize="@dimen/text_small"
                android:fontFamily="@font/objective_light" />

            <TextView
                android:id="@+id/addToFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:layout_gravity="right"
                android:text="@string/_main_detail_post_favorite"
                android:textSize="@dimen/text_small"
                android:fontFamily="@font/objective_light" />


        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>